model Stock {
  id                 String               @id @default(uuid())
  name               String               @unique @db.VarChar
  price              Float
  totalQuantity      Int                  @default(1000)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  purchasedShares    PurchasedShare[]
  transactionHistory TransactionHistory[]
  orders             OrderStock[]

  // Probably we gonna need the isCompanyOwnership: boolean - which gonna make that
  // if this stock will be purchased with % from trade, or without it
  // EX: Onsio X: false - will not be sold with %, but Apple X: true - we want 5% of the shares trade (revenue / income)

  @@map("stock")
}
