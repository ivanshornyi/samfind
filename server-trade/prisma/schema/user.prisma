model User {
  id                 String               @id @default(uuid())
  email              String               @unique
  firstName          String
  lastName           String
  stripeCustomerId   String?              @unique
  createdAt          DateTime             @default(now())
  stocks             Stock[]
  orders             OrderStock[]
  transactions       TransactionHistory[]
  walletTransactions WalletTransaction[]
  wallet             Wallet?
  purchasedShares    PurchasedShare[]

  @@map("user")
}
